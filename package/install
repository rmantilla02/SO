#!/bin/bash
# Installation command for CONTROL system.
GRUPO="$HOME/Grupo06"
DIRCONF="$HOME/Grupo06/.dirconf"
LOGFILE="install"
source ./log

controlName() {
	echo "   __________  _   ____________  ____  __ "
	echo "  / ____/ __ \/ | / /_  __/ __ \/ __ \/ / "
	echo " / /   / / / /  |/ / / / / /_/ / / / / /  "
	echo "/ /___/ /_/ / /|  / / / / _, _/ /_/ / /___"
	echo "\____/\____/_/ |_/ /_/ /_/ |_|\____/_____/"
	echo "                                          "
	echo "Copyright 2018 Â© Grupo 06                 "
}

checkInstalled() {
	if [ -f $GRUPO/.dirconf/installation.conf ]; then
		log "There was found a previos installation of the Control System."
		CONTROL_INSTALLED=1
	else
		log "There was not found a previos installation of the Control System."
		CONTROL_INSTALLED=0
	fi
}

setVariables() {
	DIRECTORY_DUPLICATED=0
	EXE_FILES_DIR="$GRUPO/bin"
	MASTER_FILES_DIR="$GRUPO/master"
	ARRIVAL_DIR="$GRUPO/arrival"
	ACCEPTED_DIR="$GRUPO/accepted"
	REJECTED_DIR="$GRUPO/rejected"
	PROCESSED_DIR="$GRUPO/processed"
	REPORTS_DIR="$GRUPO/reports"
	LOGS_DIR="$GRUPO/logs"
}

currentConfiguration() {
	echo "The current configuration is: "
	log "Printing the current configuration."

	while read linea; do

    	if [[ -z $linea ]]; then continue; fi
	
	    CONTROL_FOLDER=$(echo "$linea" | cut -d- -f1)
	    CONTROL_PATH=$(echo "$linea" | cut -d- -f2)
	
    	case "$CONTROL_FOLDER" in
    		library) echo "System library: $CONTROL_PATH";;
    	    ejecutables) echo "Executables files directory: $CONTROL_PATH";;
    	    maestros) echo "Master files directory: $CONTROL_PATH";;
    	    arribos) echo "Arrival files directory: $CONTROL_PATH";;
    	    aceptados) echo "Accepted files directory: $CONTROL_PATH";;
    	    rechazados) echo "Rejected files directory: $CONTROL_PATH";;
    	    procesados) echo "Processed files directoty $CONTROL_PATH";;
    	    reportes) echo "Reports directory: $CONTROL_PATH";;
    	    logs) echo "Logs directory: $CONTROL_PATH";;
    	esac

	done < "$DIRCONF/installation.conf"

	echo -e "Installation status: \e[0;32mINSTALLED\e[0m"
}

inputDirectory() {
	echo -n "Type the $2 directory, followed by [ENTER] (Default: ${!1}): "
	read INPUT
	
	TMP_DIR="${!1}"
	if [ "$INPUT" != "" ]; then
		log "User inserted the path $INPUT."
		TMP_DIR="$GRUPO/$INPUT"

		checkDuplicated "$TMP_DIR"
		while [ $DIRECTORY_DUPLICATED == 1 ]; do
			log "User must retype the path because it was duplicated."
			echo -n "The specified directory is already used, type a different one [ENTER] (Default: ${!1}): "
			read INPUT

			TMP_DIR="${!1}"
			if [ "$INPUT" != "" ]; then
				TMP_DIR="$GRUPO/$INPUT"
			fi
			checkDuplicated "$TMP_DIR"
		done
	
		eval "$1=$TMP_DIR"
	else
		log "User skipped the path."
	fi
}

updateDirectory() {
	echo -n "Actual $2 directory is ${!1}, would you like to change it [Y/N]? "

	while true; do
		read UPDATE_OPTION
		UPDATE_OPTION=${UPDATE_OPTION^^}
		
		if [[ "YES" == "$UPDATE_OPTION"* ]]; then
			inputDirectory $1 $2
			break
		elif [[ "NO" == "$UPDATE_OPTION"* ]]; then
			log "User skipped the update."
			break
		else
			echo -n "Wrong option. Retype [Y/N]: "
		fi
	done
}

checkDuplicated() {
	DIRECTORY_DUPLICATED=0

	if [ "$1" == "$DIRCONF" ]; then DIRECTORY_DUPLICATED=1; log "Input directory duplicated (with System directory)."
	elif [ "$1" == "$EXE_FILES_DIR" ]; then DIRECTORY_DUPLICATED=1; log "Input directory duplicated (with Executables directory)."
	elif [ "$1" == "$MASTER_FILES_DIR" ]; then DIRECTORY_DUPLICATED=1; log "Input directory duplicated (with Master directory)."
	elif [ "$1" == "$ARRIVAL_DIR" ]; then DIRECTORY_DUPLICATED=1; log "Input directory duplicated (with Arrival directory)."
	elif [ "$1" == "$ACCEPTED_DIR" ]; then DIRECTORY_DUPLICATED=1; log "Input directory duplicated (with Accepted directory)."
	elif [ "$1" == "$REJECTED_DIR" ]; then DIRECTORY_DUPLICATED=1; log "Input directory duplicated (with Rejected directory)."
	elif [ "$1" == "$PROCESSED_DIR" ]; then DIRECTORY_DUPLICATED=1; log "Input directory duplicated (with Processed directory)."
	elif [ "$1" == "$REPORTS_DIR" ]; then DIRECTORY_DUPLICATED=1; log "Input directory duplicated (with Reports directory)."
	elif [ "$1" == "$LOGS_DIR" ]; then DIRECTORY_DUPLICATED=1; log "Input directory duplicated (with Logs directory)."
	fi
}

loadingBar() {
	for it in $(seq 1 40); do 
		echo -n "-"
		sleep 0.025
	done
	echo ">"
	unset it
}

creationLoader() {
	for it in $(seq 1 3); do 
		echo -n "."
		sleep 0.333
	done
	echo ""
}

actualConfiguration() {
	echo "The current configuration is: "
	echo "System library: $DIRCONF"
	echo "Executables files directory: $EXE_FILES_DIR"
	echo "Master files directory: $MASTER_FILES_DIR"
	echo "Arrival files directory: $ARRIVAL_DIR"
	echo "Accepted files directory: $ACCEPTED_DIR"
	echo "Rejected files directory: $REJECTED_DIR"
	echo "Processed files directoty $PROCESSED_DIR"
	echo "Reports directory: $REPORTS_DIR"
	echo "Logs directory: $LOGS_DIR"
	echo -e "Installation status: \e[0;33mWAITING FOR CONFIRMATION\e[0m"
	echo -n "Do you want to continue [Y/N]? "
	log "Actual configuration showed."

	while true; do
		read INPUT
		INPUT=${INPUT^^}

		if [[ "YES" == "$INPUT"* ]]; then
			CONFIG_ACCEPTED=1
			break
		elif [[ "NO" == "$INPUT"* ]]; then
			CONFIG_ACCEPTED=0
			break
		else
			echo -n "Wrong option. Retype [Y/N]: "
		fi
	done
	
}

firstDataInput() {
	PERL_VERSION=$(perl -v | grep "This is perl *"  | sed 's-\(.*\)(v\(.*\))\(.*\)-\2-g')
	if ((${PERL_VERSION:0:1} < 5)); then
		log "The Perl version installed is v$PERL_VERSION, and this program requires at least the version 5.0.0"
		echo "An upgrade in PERL is required to continue with the software installation. Please, install at lease PERL 5.0.0 and try again later (maybe using sudo apt-get perl)."
		CONTROL_INSTALLATION=1
	fi

	if [ ! -d "$HOME/Grupo06" ]; then
  		mkdir $GRUPO
  		log "Program home directory created at $GRUPO."
	fi

	log "User will insert the executables files path."
	inputDirectory EXE_FILES_DIR "executables files"
	log "User will insert the master files path."
	inputDirectory MASTER_FILES_DIR "master files"
	log "User will insert the arrival files path."
	inputDirectory ARRIVAL_DIR "arrival files"
	log "User will insert the accepted files path."
	inputDirectory ACCEPTED_DIR "accepted files"
	log "User will insert the rejected files path."
	inputDirectory REJECTED_DIR "rejected files"
	log "User will insert the processed files path."
	inputDirectory PROCESSED_DIR "processed files"
	log "User will insert the reports path."
	inputDirectory REPORTS_DIR "reports"
	log "User will insert the logs path."
	inputDirectory LOGS_DIR "logs"

	loadingBar
	actualConfiguration
}

updateDataInput() {
	log "User will update the executables files path."
	updateDirectory EXE_FILES_DIR "executables files"
	log "User will update the master files path."
	updateDirectory MASTER_FILES_DIR "master files"
	log "User will update the arrival files path."
	updateDirectory ARRIVAL_DIR "arrival files"
	log "User will update the accepted files path."
	updateDirectory ACCEPTED_DIR "accepted files"
	log "User will update the rejected files path."
	updateDirectory REJECTED_DIR "rejected files"
	log "User will update the processed files path."
	updateDirectory PROCESSED_DIR "processed files"
	log "User will update the reports path."
	updateDirectory REPORTS_DIR "reports"
	log "User will update the logs path."
	updateDirectory LOGS_DIR "logs"

	loadingBar
	actualConfiguration
}

createDirectories() {
	mkdir -p $DIRCONF
	log "System directory created at $DIRCONF."
	echo -n "Creating system library"
	creationLoader

	mkdir -p $EXE_FILES_DIR
	log "Executables files directory created at $EXE_FILES_DIR."
	echo -n "Creating executables files directory"
	creationLoader

	mkdir -p $MASTER_FILES_DIR
	log "Master files directory created at $MASTER_FILES_DIR."
	echo -n "Creating master files directory"
	creationLoader
	
	mkdir -p $ARRIVAL_DIR
	log "Arrival files directory created at $ARRIVAL_DIR."
	echo -n "Creating arrival files directory"
	creationLoader

	mkdir -p $ACCEPTED_DIR
	log "Accepted files directory created at $ACCEPTED_DIR."
	echo -n "Creating accepted files directory"
	creationLoader

	mkdir -p $REJECTED_DIR
	log "Rejected files directory created at $REJECTED_DIR."
	echo -n "Creating rejected files directory"
	creationLoader

	mkdir -p $PROCESSED_DIR
	log "Processed files directory created at $PROCESSED_DIR."
	echo -n "Creating processed files directory"
	creationLoader

	mkdir -p $REPORTS_DIR
	log "Reports directory created at $REPORTS_DIR."
	echo -n "Creating reports directory"
	creationLoader

	mkdir -p $LOGS_DIR
	log "Logs directory created at $LOGS_DIR."
	echo -n "Creating logs directory"
	creationLoader
}

movingFiles() {
	if [ "$(ls -A files/master)" ]; then
		cp files/master/* $MASTER_FILES_DIR/
		log "Existing master files moved to $MASTER_FILES_DIR."
		echo -n "Copying master files"
		creationLoader
	else
		log "There was not any master files to move to $MASTER_FILES_DIR."
	fi

	if [ "$(ls -A files/tables)" ]; then
		cp files/tables/* $MASTER_FILES_DIR/
		log "Existing tables files moved to $MASTER_FILES_DIR."
		echo -n "Copying tables"
		creationLoader
	else
		log "There was not any tables files to move to $MASTER_FILES_DIR."
	fi

	if [ "$(ls -A files/executables)" ]; then
		cp files/executables/* $EXE_FILES_DIR/
		log "Existing executables files moved to $EXE_FILES_DIR."
		echo -n "Copying executables files"
		creationLoader
	else
		log "There was not any executables files to move to $EXE_FILES_DIR."
	fi
}

createConfigurationFile() {
	touch $DIRCONF/installation.conf
	log "Installation configuration file created."

	echo "ejecutables-$EXE_FILES_DIR-$(whoami)-$(date "+%F %T")" >> $DIRCONF/installation.conf
	log "Executables files directory wrote to installation configuration file."
	echo "maestros-$MASTER_FILES_DIR-$(whoami)-$(date "+%F %T")" >> $DIRCONF/installation.conf
	log "Master files directory wrote to installation configuration file."
	echo "arribos-$ARRIVAL_DIR-$(whoami)-$(date "+%F %T")" >> $DIRCONF/installation.conf
	log "Arrival files directory wrote to installation configuration file."
	echo "aceptados-$ACCEPTED_DIR-$(whoami)-$(date "+%F %T")" >> $DIRCONF/installation.conf
	log "Accepted files directory wrote to installation configuration file."
	echo "rechazados-$REJECTED_DIR-$(whoami)-$(date "+%F %T")" >> $DIRCONF/installation.conf
	log "Rejected files directory wrote to installation configuration file."
	echo "procesados-$PROCESSED_DIR-$(whoami)-$(date "+%F %T")" >> $DIRCONF/installation.conf
	log "Processed files directory wrote to installation configuration file."
	echo "reportes-$REPORTS_DIR-$(whoami)-$(date "+%F %T")" >> $DIRCONF/installation.conf
	log "Reports directory wrote to installation configuration file."
	echo "logs-$LOGS_DIR-$(whoami)-$(date "+%F %T")" >> $DIRCONF/installation.conf
	log "Logs directory wrote to installation configuration file."
	echo -n "Creating configuration file"
	log "Installation configuration file succesfully wrote."
	creationLoader
}

runInstallation() {
	echo "Your directory structure will be generated in $HOME/Grupo06."
	setVariables

	loadingBar
	firstDataInput
	log "Input directories were defined."

	while [ $CONFIG_ACCEPTED == 0 ]; do
		loadingBar
		updateDataInput
		log "Input directories were updated."
	done

	loadingBar
	createDirectories
	movingFiles
	createConfigurationFile
	loadingBar

	echo "Installation completed!"
}

cleanDirectory() {
	rm -rf $GRUPO
	log "The current installation environment was cleaned."
	echo "The destination directory was succesfully cleaned."
}

repairingMode() {
	echo "The installation manager is running in the repairing mode."
	echo "Every file previously used by the system (including reports) will be lost."
	echo "If you want to keep any source file, move them to their corresponding folder (master, tables or executables) in the package files folder."
	echo "In case you want to keep any output file (like reports), procceed with their respective backup."
	echo -n "Do you want to continue [Y/N]? "

	while true; do
		read REPAIR_OPTION
		REPAIR_OPTION=${REPAIR_OPTION^^}
		
		if [[ "YES" == "$REPAIR_OPTION"* ]]; then
			log "User selected to repair current installation."
			loadingBar
			cleanDirectory
			runInstallation
			break
		elif [[ "NO" == "$REPAIR_OPTION"* ]]; then
			log "User selected not to repair current installation."
			break
		else
			echo -n "Wrong option. Retype [Y/N]: "
		fi
	done
}

log "Installation wizard started."
controlName
echo "Welcome to the CONTROL installation wizard."
log "Local variable GRUPO seted at $HOME/Grupo06"
log "Local variable DIRCONF seted at $HOME/Grupo06/.dirconf"

if [ "$1" == "-r" ]; then
	log "The program will run in repair mode."
	repairingMode
else
	checkInstalled
	if [ $CONTROL_INSTALLED == 1 ]; then
		echo "The CONTROL System is already installed in this environment. If you want to repair it, please try with \"install -r\"."
		loadingBar
		currentConfiguration
	else
		runInstallation
	fi
fi	